<div class="container">
<div class="row">
<div class="col-md-3">
  <%= render 'books/books', book: @book, user: @user %>
</div>
<div class="col-md-8 offset-md-1">
<h1>books</h1>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </tr>
         <% @books.each do |book| %>
  <tr>
     <td><%= link_to user_path(book.user.id) do %>
         <%= image_tag book.user.get_profile_image %>
         <% end %>
     </td>
     <td><%= link_to book_path(book.id) do %>
         <%= book.title %>
         <% end %>
     </td>
     <td><%= book.body %></td>
  </tr>
         <% end %>
</table>
</div>
</div>
