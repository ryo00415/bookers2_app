<div>
  <%= flash[:notice] %>
</div>

<div class="container">
<div class="row">
<div class="col-md-3">
    <%= render 'books/books', book: @book_new, user: @user %>
</div>
<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table>
  <tr>
      <td><%= link_to user_path(@book.user.id) do %>
          <%= image_tag @book.user.get_profile_image %>
          <%= @book.user.name %>
          <% end %>
      </td>
      <td><%= link_to book_path(@book.id) do %>
          <%= @book.title %>
          <% end %>
      </td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
      <td>
          <%= link_to "Edit", edit_book_path(@book.id) %>
      </td>
      <td>
          <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </td>
      <% end %>
  </tr>
</table>
</div>
</div>
</div>
